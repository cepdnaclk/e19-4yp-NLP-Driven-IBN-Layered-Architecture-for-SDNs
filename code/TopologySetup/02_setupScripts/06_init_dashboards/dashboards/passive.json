{
  "title": "Passive Metrics Dashboard",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [
        {
		  "expr": "label_replace(cpu_usage_percent{job=\"hosts-passive-metrics\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "{{alias}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "targets": [
        {
		  "expr": "label_replace(memory_usage_percent{job=\"hosts-passive-metrics\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "{{alias}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Usage (%)",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "label_replace(sum by (instance) (disk_usage_percent{job=\"hosts-passive-metrics\"}), \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "{{alias}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Process Virtual & Resident Memory (Bytes)",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
		  "expr": "label_replace(process_virtual_memory_bytes{job=\"hosts-passive-metrics\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "virtual-{{alias}}"
        },
        {
		  "expr": "label_replace(process_resident_memory_bytes{job=\"hosts-passive-metrics\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "resident-{{alias}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Process CPU Time (Seconds)",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
		  "expr": "label_replace(process_cpu_seconds_total{job=\"hosts-passive-metrics\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
          "legendFormat": "{{alias}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network RX Bytes by Interface",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "net_rx_bytes{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
          "legendFormat": "{{interface}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network TX Bytes by Interface",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "net_tx_bytes{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
          "legendFormat": "{{interface}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network RX Packets by Interface",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "net_rx_packets{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
          "legendFormat": "{{interface}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network TX Packets by Interface",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
      "targets": [
        {
          "expr": "net_tx_packets{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
          "legendFormat": "{{interface}}"
        }
      ]
    },
    {
  "type": "timeseries",
  "title": "Network TX Errors by Interface",
  "gridPos": { "h": 6, "w": 12, "x": 0, "y": 30 },
  "targets": [
    {
      "expr": "net_tx_errors{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
      "legendFormat": "{{interface}}"
    }
  ]
},
{
  "type": "timeseries",
  "title": "Network TX Drops by Interface",
  "gridPos": { "h": 6, "w": 12, "x": 12, "y": 30 },
  "targets": [
    {
      "expr": "net_tx_drops{job=\"hosts-passive-metrics\", interface!=\"lo\", interface!=\"eth0\"}",
      "legendFormat": "{{interface}}"
    }
  ]
},
{
  "type": "stat",
  "title": "TCP State: LISTEN",
  "gridPos": { "h": 4, "w": 12, "x": 0, "y": 36 },
  "options": {
    "reduceOptions": {
      "calcs": ["lastNotNull"],
      "fields": "",
      "values": false
    },
    "orientation": "vertical",
    "textMode": "value_and_name",
    "colorMode": "value",
    "graphMode": "none",
    "justifyMode": "center",
    "color": { "mode": "palette-classic" },
    "text": { "valueSize": 26 },
    "sparkline": { "show": false },
    "showPercentChange": true
  },
  "fieldConfig": {
    "defaults": {
      "color": { "mode": "thresholds" },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 50 },
          { "color": "red", "value": 100 }
        ]
      }
    },
    "overrides": []
  },
  "targets": [
    {	
	  "expr": "label_replace(tcp_connection_states{job=\"hosts-passive-metrics\", state=\"LISTEN\"}, \"alias\", \"d${1}\", \"instance\", \"^.*\\\\.(\\\\d+):8000$\")",
      "legendFormat": "{{alias}}"
    }
  ]
},
